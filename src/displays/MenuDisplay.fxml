<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuDisplayController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SUBMARIPPER">
         <font>
            <Font size="27.0" />
         </font>
      </Text>
      <SplitPane dividerPositions="0.11055276381909548" prefHeight="160.0" prefWidth="400.0">
         <items>
            <Button fx:id="startBtn" mnemonicParsing="false" onAction="#openLocation" prefHeight="25.0" prefWidth="200.0" text="Start">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <VBox maxWidth="-Infinity" prefHeight="158.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="searchField" prefHeight="25.0" prefWidth="200.0" promptText="enter seed" />
                  <Button fx:id="submitBtn" mnemonicParsing="false" onAction="#submitSeed" text="Submit" />
               </children>
            </VBox>
         </items>
      </SplitPane>
      <Button mnemonicParsing="false" onAction="#openCredits" text="Credits" />
   </children>
</VBox>
